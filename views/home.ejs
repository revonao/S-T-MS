<%- include header %>
<%- include navbar %>

<% if(locals.islogin) { %>
    <div class="container" style="margin-top: 90px">
        <div class="row">
            <div class="col-md-4 order-md-1 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">个人中心</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <a class="nav-link" href="#">用户信息</a>
                            <small class="nav-link">User Information</small>
                        </div>
                        <span class="text-muted"></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <a class="nav-link" href="#">访问记录</a>
                            <small class="nav-link">Access Record</small>
                        </div>
                        <span class="text-muted"></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <a class="nav-link" href="#">账户安全</a>
                            <small class="nav-link">Account Security</small>
                        </div>
                        <span class="text-muted"></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <a class="nav-link" href="#">我的钱包</a>
                            <small class="nav-link">My Account</small>
                        </div>
                        <span class="text-success"></span>
                    </li>
                </ul>

                <!--                <form class="card p-2">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Promo code">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-secondary">Redeem</button>
                                        </div>
                                    </div>
                                </form>-->
            </div>
            <div class="col-md-8 order-md-2">
                <h4 class="mb-3">用户信息</h4>
                <form class="needs-validation" role="form" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">名</label>
                            <input type="text" class="form-control" id="firstname" placeholder="空"
                                   value="<%= data[0].firstname %>"
                                   required>
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">姓</label>
                            <input type="text" class="form-control" id="lastname" placeholder="空"
                                   value="<%= data[0].lastname %>"
                                   required>
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="username">用户名</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            <label class="form-control" id="username" required><%= data[0].username %></label>
                            <div class="invalid-feedback" style="width: 100%;">
                                Your username is required.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword">密码 <span class="text-muted"></span></label>
                        <input type="password" class="form-control" id="password" placeholder="必须"
                               value="<%= data[0].password %>">
                        <div class="invalid-feedback">
                            Your password is required.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email">邮箱<span class="text-muted">(选填)</span></label>
                        <input type="email" class="form-control" id="email" placeholder="空"
                               value="<%= data[0].email %>">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address">地址<span class="text-muted">(选填)</span></label>
                        <input type="text" class="form-control" id="address" placeholder="空"
                               value="<%= data[0].address %>" required>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">经度</label>
                            <input type="text" class="form-control" id="longitude" placeholder=""
                                   value="<%= data[0].longitude %>"
                                   required>
                            <div class="invalid-feedback">
                                Longitude is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">纬度</label>
                            <input type="text" class="form-control" id="latitude" placeholder=""
                                   value="<%= data[0].latitude %>"
                                   required>
                            <div class="invalid-feedback">
                                Latitude is required.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div id="reg_map"></div>
                    </div>
                    <hr class="mb-4">

                    <button class="btn btn-primary btn-lg btn-block" type="submit">确认修改</button>
                </form>
            </div>
        </div>
    </div>
    </form>
<% } else{ %>;
<% } %>
<%- include footer %>