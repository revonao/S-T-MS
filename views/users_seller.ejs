<%- include header %>
<%- include navbar %>
<!-- 如果是登录状态，则进入信息查询页面 -->
<% if(locals.islogin){ %>
    <!--按条件查询-->
    <!--用户信息显示的表单-->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span><a style="font-size: 22px;color: #333333">我的商铺</a></span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <hr/>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="users">
                                <span data-feather="home"></span>
                                我的仓库
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_entry">
                                <span data-feather="file"></span>
                                入库查询
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_order">
                                <span data-feather="shopping-cart"></span>
                                出库查询
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_buyer">
                                <span data-feather="users"></span>
                                买家查询
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  active" href="users_seller">
                                <span data-feather="bar-chart-2"></span>
                                卖家查询<span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_logistic">
                                <span data-feather="layers"></span>
                                物流查询
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span><a style="font-size: 22px;color: #333333">销售分析</a></span>
                        <a class="d-flex align-items-center text-muted">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <hr/>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="users_analysis_month">
                                <span data-feather="file-text"></span>
                                最近一月
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_analysis_season">
                                <span data-feather="file-text"></span>
                                最近一季
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_analysis_year">
                                <span data-feather="file-text"></span>
                                最近一年
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="users_analysis_report">
                                <span data-feather="file-text"></span>
                                销售报告
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">我的仓库</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group mr-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">导入</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">导出</button>
                        </div>
                        <input type="text" class="input" value="" placeholder="货物编号/名称"/>
                        <div class="btn-group mr-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <span data-feather="calendar"></span>
                                搜索
                            </button>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <button type="button" class="btn btn-md btn-outline-secondary" data-toggle="modal"
                            data-target="#ModalAdd">添加商品
                    </button>
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-md btn-outline-secondary">出库</button>
                        <button type="button" class="btn btn-md btn-outline-secondary">删除</button>
                    </div>
                    <!-- 模态框（Modal） -->
                    <div class="modal fade" id="ModalAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                         aria-hidden="true">

                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="myModalLabel">添加商品</h4>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <form class="needs-validation" novalidate>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="itemName">商品编号</label>
                                                    <input type="text" class="form-control" id="id" placeholder=""
                                                           value="" required>
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="name">商品名称</label>
                                                    <input type="text" class="form-control" id="name" placeholder=""
                                                           value="" required>
                                                    <div class="invalid-feedback">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="class">种类</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="class" placeholder=""
                                                           required>
                                                    <div class="invalid-feedback" style="width: 100%;">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="cc-number">数量 <span class="text-muted"></span></label>
                                                <input type="text" class="form-control" id="quantity" placeholder=""
                                                       required>
                                                <div class="invalid-feedback">
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="">上游货商<span class="text-muted">(Optional)</span></label>
                                                <input type="text" class="form-control" id="" placeholder="">
                                                <div class="invalid-feedback">
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="address2">零售价格<span class="text-muted">(Optional)</span></label>
                                                <input type="text" class="form-control" id="price" placeholder="">
                                            </div>

                                            <hr class="mb-4">

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="expired-time">保质期</label>
                                                    <input type="date" class="form-control" id="expired-time"
                                                           placeholder="" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="cc-name">进货日期</label>
                                                    <input type="date" class="form-control" id="entry-time"
                                                           placeholder="" required>
                                                </div>
                                            </div>
                                            <hr class="mb-4">
                                            <button class="btn btn-primary btn-lg btn-block" type="submit" href="/users/">保存至仓库
                                            </button>
                                        </form>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal -->
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="table" class="table table-striped table-sm" data-toggle="table" data-show-export="false"
                           data-pagination="true"
                           data-click-to-select="true" data-toolbar="#toolbar">
                        <thead>
                        <tr>
                            <th data-field="state" data-checkbox="true"></th>
                            <th>商品编号</th>
                            <th>名称</th>
                            <th>类别</th>
                            <th>库存</th>
                            <th>零售价格</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% if (data.length) { %>
                            <% data.forEach(function(item){ %>
                                <tr>
                                    <td data-checkbox="false"></td>
                                    <td><a href="#" title="商品详情"><%= item.id %></a></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.class %></td>
                                    <td><%= item.quantity %></td>
                                    <td><%= item.price %></td>
                                    <td>
                                        <div class="btn-group operation">
                                            <a href="/users/toUpdate/<%= item.id %>" title="出库">出库</a>
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

<% }else{ %>
    <!-- 否则，提示重新登陆 -->
    <div id="myAlert" class="alert alert-warning" style="margin-top: 90px">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>警告！</strong>登陆已超时，请登陆后访问。
    </div>

    <script>
        $(function () {
            $(".close").click(function () {
                $("#myAlert").alert();
            });
        });
    </script> <% } %>
<%- include footer %>
